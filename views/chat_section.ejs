<link rel="stylesheet" href="/css/chats_section.css">
<div class="header">
    <img src="https://cdn-icons-png.flaticon.com/512/4964/4964263.png" alt="Chats">
    <span>Chats</span>
    <div class="line"></div>
</div>
<div class="container">
    <div class="chats-container" id="chats-container">
        <% for(let chat of chats){ %>
            <li>
                <% if (locals.user.id == chat.sender.id) { %>
                    <div>
                        <img src=<%= chat.receiver.avatar %> alt="Profile">
                        <div>
                            <div><%= chat.receiver.name %></div>
                            <div>
                                <% if (chat.lastSender==locals.user.id) { %>
                                 You : 
                                <% } %>
                                <%= chat.latestMessage %>
                            </div>
                        </div> 
                    </div>
                <% } else { %>
                    <div>
                        <img src=<%= chat.sender.avatar %> alt="Profile">
                        <div>
                            <div><%= chat.sender.name %></div>
                            <div>
                                <% if (chat.lastSender==locals.user.id) { %>
                                    You : 
                                   <% } %>
                               <span style="font-weight: bold;"><%= chat.latestMessage %></span> 
                            </div>
                        </div> 
                    </div>
                <% } %>
        
            </li>
        <% } %>
        
        </div> 

    <div class="chats hide">
        <li>
            <h4><img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Profile"> User</h4>
        </li>
        <div class="single-chat">

        </div>
        <form action="">
            <input type="text" id="msg">
            <input type="button" value="Send"  id="send-message">
        </form>

    </div>


    <div class="aside">
        <h3>Start New Chat With </h3>
        <% for(user of users) { %>
            <li class="open-chat" user_Email="<%= user.email %>"><%= user.name %> </li>
        <% } %>

    </div>
</div>



<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<script src="/js/chats_section.js" type="text/javascript"></script>
