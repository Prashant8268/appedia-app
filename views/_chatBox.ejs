<link rel="stylesheet" href="/css/chatBox.css">
<% if (locals.user) { %>
    <div id="user-chat-box">
        <div class="Header">Header</div>
        <div id="chats">Chats
            <ul id="message-list">
                <li class="other-msg">Hey there</li>
                <li class="self-msg">Hello </li>
            </ul>
        </div>
        
        <form id="chat-form">
            <input type="text" required placeholder="Type you mesaage " id="msg" name="mesaage">
            <input type="button" value="Send"  id="send-message">
        </form>
    </div>
 
<% } %>